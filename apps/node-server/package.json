{
  "name": "node-server",
  "version": "0.1.0",
  "description": "Full node server for Lorachain network",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lorachain/core": "workspace:*",
    "@lorachain/shared": "workspace:*",
    "@lorachain/node": "workspace:*",
    "@lorachain/mesh-protocol": "workspace:*",
    "express": "^4.19.0",
    "socket.io": "^4.7.0",
    "jsonwebtoken": "^9.0.0",
    "express-rate-limit": "^7.0.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "supertest": "^7.0.0",
    "socket.io-client": "^4.7.0"
  }
}
