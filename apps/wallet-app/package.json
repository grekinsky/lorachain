{
  "name": "wallet-app",
  "version": "0.1.0",
  "description": "Mobile wallet application for Lorachain",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lorachain/core": "workspace:*",
    "@lorachain/shared": "workspace:*",
    "@lorachain/mobile-wallet": "workspace:*",
    "@lorachain/mesh-protocol": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  }
}
