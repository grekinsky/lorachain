{
  "name": "@lorachain/core",
  "version": "0.1.0",
  "description": "Core blockchain logic for Lorachain network",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run proto:build && tsc",
    "dev": "tsc --watch",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:unit:watch": "vitest watch --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest watch --config vitest.config.integration.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:run": "vitest run",
    "test:unit:coverage": "vitest run --config vitest.config.unit.ts --coverage",
    "test:integration:coverage": "vitest run --config vitest.config.integration.ts --coverage",
    "test:ci:unit": "vitest run --config vitest.config.unit.ts --reporter=junit --outputFile=test-results-unit.xml",
    "test:ci:integration": "vitest run --config vitest.config.integration.ts --reporter=junit --outputFile=test-results-integration.xml",
    "lint": "eslint ./src ./tests",
    "lint:fix": "eslint ./src ./tests --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "proto:compile": "mkdir -p dist/proto && pbjs -t static-module -w es6 -o dist/proto/generated.js src/proto/*.proto",
    "proto:types": "pbts -o dist/proto/generated.d.ts dist/proto/generated.js",
    "proto:build": "pnpm run proto:compile && pnpm run proto:types"
  },
  "dependencies": {
    "@lorachain/shared": "workspace:*",
    "@msgpack/msgpack": "^3.1.2",
    "@noble/ed25519": "^2.3.0",
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.3.0",
    "@types/ws": "^8.18.1",
    "bloom-filters": "^3.0.1",
    "bonjour": "^3.5.0",
    "level": "^10.0.0",
    "long": "^5.3.2",
    "lz4": "^0.6.5",
    "pako": "^2.1.0",
    "protobufjs": "^7.5.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.10",
    "@types/node": "^20.19.7",
    "@types/pako": "^2.0.3",
    "@types/protobufjs": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "protobufjs-cli": "^1.1.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
