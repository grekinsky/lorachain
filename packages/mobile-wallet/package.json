{
  "name": "@lorachain/mobile-wallet",
  "version": "0.1.0",
  "description": "Mobile wallet implementation for Lorachain light nodes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lorachain/core": "workspace:*",
    "@lorachain/mesh-protocol": "workspace:*",
    "@lorachain/shared": "workspace:*",
    "@noble/ed25519": "^2.3.0",
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.3.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
